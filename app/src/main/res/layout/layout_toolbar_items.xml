<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/common_padding_large_12dp"
    android:paddingStart="@dimen/common_padding_large_12dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/btn_left"
        android:layout_width="@dimen/finger_size_half"
        android:layout_height="@dimen/finger_size_half"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_padding_xsmall_2dp"
        android:src="@drawable/ic_arrow_left_grey"/>

    <com.theappsolutions.boilerplate.customviews.CustomFontTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_ml_18sp"
        app:customFontName="ClanOT_NarrBook"/>

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/finger_size_half"
        android:layout_height="@dimen/finger_size_half"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_padding_xsmall_2dp"
        android:src="@drawable/ic_settings"/>
</RelativeLayout>